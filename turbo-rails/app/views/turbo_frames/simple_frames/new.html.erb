<!-- Render by Link -->
<%= turbo_frame_tag 'link' do %>
  <p>turbo frame rendered by link</p>
<% end %>
<!-- Render by Button -->
<%= turbo_frame_tag 'button' do %>
  <p>turbo frame rendered by button</p>
<% end %>
<!-- Render with back link -->
<%= turbo_frame_tag 'back' do %>
  <%= link_to 'Back', turbo_frames_simple_frames_path %>
  <p>turbo frame with back link</p>
<% end %>
<!-- Render from the putside -->
<%= turbo_frame_tag 'outside' do %>
  <p>turbo frame rendered by a link with data attributes e.g. <code>data-turbo-frame:'your-frame-id'</code></p>
<% end %>