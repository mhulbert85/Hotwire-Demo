<h1>TurboFrames#new</h1>
<p>Find me in app/views/turbo_frames/new.html.erb</p>
<%= turbo_frame_tag "my_turbo_frame" do %>
  <p>This content is loaded from <code>app/views/turbo_frames/new.html.erb</code></p>
<% end %>
<!-- Mutliple Turbo Frames -->
<%= turbo_frame_tag 'first' do %>
  <div class="ratio ratio-1x1">
    <h1>1</h1>
  </div>
<% end %>
<%= turbo_frame_tag 'second' do %>
  <div class="ratio ratio-1x1">
    <h1>2</h1>
  </div>
<% end %>
<%= turbo_frame_tag 'third' do %>
  <div class="ratio ratio-1x1">
    <h1>3</h1>
  </div>
<% end %>
<%= turbo_frame_tag 'fourth' do %>
  <div class="ratio ratio-1x1">
    <h1>4</h1>
  </div>
<% end %>
<%= turbo_frame_tag 'fifth' do %>
  <div class="ratio ratio-1x1">
    <h1>5</h1>
  </div>
<% end %>
<%= turbo_frame_tag 'sixth' do %>
  <div class="ratio ratio-1x1">
